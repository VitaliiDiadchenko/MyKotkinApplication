<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_actor"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/image_of_actor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_downey" />

    <TextView
        android:id="@+id/text_under_img_first_actor"
        style="@style/text_under_img_actor_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="@+id/img_actor"
        app:layout_constraintStart_toStartOf="@+id/img_actor"
        app:layout_constraintTop_toBottomOf="@+id/img_actor"
        tools:text="Robert Downey Jr."/>

</androidx.constraintlayout.widget.ConstraintLayout>