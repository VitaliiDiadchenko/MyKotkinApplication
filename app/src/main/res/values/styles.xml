<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bold_text_style">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_text_style">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_text_style" parent="light_text_style">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_button_back</item>
    </style>

    <style name="header_style" parent="bold_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_header_color</item>
    </style>

    <style name="main_header_style" parent="header_style">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="tag_line_style" parent="light_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="rating_bar_style">
        <item name="ratingBarStyle">?android:attr/ratingBarStyleSmall</item>
        <item name="colorControlNormal">@color/disabled_primary</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="review_count_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/disabled_primary</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="description_style" parent="header_style">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="text_under_img_actor_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_under_img_actor</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
</resources>